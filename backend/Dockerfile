FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo
COPY app/ ./app/
COPY .env .env.example ./

# Exponer puerto
EXPOSE 8000

# Correr
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
